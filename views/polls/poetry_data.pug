  .container
    .jumbotron.text-center
      .logo
        a(href="https://sas.utmn.ru")
          img(src="/assets/Logo__red.png")
      h2 SAS Poetry Voting
      table.table 
        thead
          tr
            td.answer Answers
            td.comments Comments
            td Time
        tbody.tablebody
script.
  var data = [!{data}];
  var registrations = [];
  
  var startDate = '';
  var percentage = 0;
  const urlParams = new URLSearchParams(window.location.search);
  var dateUrl = urlParams.get('date');
  if(dateUrl){ startDate = Date.parse(dateUrl); }
  
  data.forEach(function(el){
    var parsed = {};
    parsed.answer = el.polls.poetry.answer ? 'YES' : 'NO';
    parsed.time = el.polls.poetry.time;    
    parsed.comments = el.polls.poetry.comments;   
    if (!dateUrl || Date.parse(parsed.time) > startDate){
          if (el.polls.poetry.answer) percentage++;
          registrations.unshift(parsed);
      }
  });
  var weekday=new Array(7);
  weekday[1]="Monday";
  weekday[2]="Tuesday";
  weekday[3]="Wednesday";
  weekday[4]="Thursday";
  weekday[5]="Friday";
  weekday[6]="Saturday";
  weekday[7]="Sunday";
  registrations.forEach(function(elem){
    var row = document.createElement('tr');
    var table = document.querySelector('.tablebody');
    table.appendChild(row);
    var td1 = document.createElement('td');
    td1.innerHTML = elem["answer"];
    row.appendChild(td1);
    var td2 = document.createElement('td');
    td2.innerHTML = elem["comments"] === undefined ? '' : elem["comments"];
    row.appendChild(td2);
    var td3 = document.createElement('td');
    var timeParsed = new Date(Date.parse(elem["time"]));
    td3.innerHTML = weekday[timeParsed.getDay()] + ', ' + elem["time"];
    row.appendChild(td3);
  });
  
  document.querySelector('.answer').innerHTML += ` (${(percentage*100)/registrations.length} % positive)`;
  
  
  
